
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="rootList">
    <div class="col-md-12">
        <form id="frmSearch">
            <fieldset class="">
                <input type="hidden" id="branchCode" name="branchCode" value="@RDAuthorize.BranchCode" />
                <!--Row 1-->
                <div class="row form-group">
                    <div class="col-md-2"></div>
                    <div class="col-md-3">
                        <div class="pull-left">
                            <input type="radio" id="isInau" name="isInau" value=0 checked />
                            <label for="isInau">Hiệu lực</label>
                        </div>
                        <div class="pull-right">
                            <input type="radio" id="isInau" name="isInau" value=1 />
                            <label for="isInau">Đang xử lý</label>
                        </div>
                    </div>
                </div>

                <!--Row 2-->
                <div class="row form-group">
                    <div class="col-md-2">
                        <label class="fa-pull-right">Ngày cập nhật từ ngày</label>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group date" data-provide="datepicker">
                            <input class="datepicker form-control" id="fromDate" name="fromDate" />
                            <div class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="fa-pull-right">Đến ngày</label>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group date" data-provide="datepicker">
                            <input class="datepicker form-control" id="toDate" name="toDate" />
                            <div class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </div>
                        </div>
                    </div>

                </div>

                <!--Row 3-->
                <div class="row form-group">
                    <div class="col-md-2">
                        <label class="fa-pull-right">Số HĐBH</label>
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="insuranceContractNo" name="insuranceContractNo" />
                    </div>
                    <div class="col-md-2">
                        <label class="fa-pull-right">Số FT – TT</label>
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="ftttNo" name="ftttNo" />
                    </div>

                </div>

                <!--Row 4-->
                <div class="row form-group">
                    <div class="col-md-2">
                        <label class="fa-pull-right">User cập nhật</label>
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="userUpdated" name="userUpdated" />
                    </div>
                    <div class="col-md-2">
                        <label class="fa-pull-right">Nguồn thu phí</label>
                    </div>
                    <div class="col-md-3">
                        <select id="externalRepayment" name="externalRepayment" class="form-control">
                            <option value=-1 selected>Tất cả</option>
                            <option value=0>Thu phí tại OCB</option>
                            <option value=1>Thu phí ngoài OCB</option>
                        </select>
                    </div>

                </div>

                <!--Row 5-->
                <div class="row form-group">
                    <div class="col-md-2">
                        <label class="fa-pull-right">Trạng thái phiếu thu</label>
                    </div>
                    <div class="col-md-3">
                        <select id="processStatusList" name="processStatusList" class="form-control" multiple="multiple">
                        </select>
                    </div>
                    <div class="col-md-2">

                    </div>
                    <div class="col-md-3">
                        <button type="button" id="btnSearch" name="btnSearch" class="btn btn-primary"><i class="fa fa-search"></i> Tìm kiếm</button>
                        <button type="button" id="btnExport" name="btnExport" class="btn btn-success"><i class="fa fa-file-excel-o"></i> Xuất Excel</button>
                    </div>
                </div>
            </fieldset>
        </form>

        <div class="row">
            <div id="btnPayment" class="col-md-12">
                <button type="button" id="btnAdd" name="btnAdd" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Thêm phiếu TT</button>
                <button type="button" id="btnEdit" name="btnEdit" class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i> Điều chỉnh</button>
                <button type="button" id="btnRemove" name="btnRemove" class="btn btn-danger"><i class="fa fa-trash"></i> xóa</button>
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-md-12">
                <div id="gridPaymentManagement">
                    @Html.Partial("_RepaymentManagement")
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {

    <script src="~/Scripts/Payment/paymentList.js"></script>
    <script src="~/Scripts/Payment/PaymentActions.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#processStatusList').select2({
                width: "100%"
            });
            $('#externalRepayment').select2({
                width: "100%"
            });
        });
    </script>
}