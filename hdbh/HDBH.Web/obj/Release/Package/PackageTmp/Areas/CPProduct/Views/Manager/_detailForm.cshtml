@model HDBH.Models.ViewModel.CPProductViewModel
@if (Model != null)
{
    <input name="counterPartyId" value="@Model.counterPartyId" type="hidden" />
    <input name="counterPartyGroup" value="@Model.counterPartyGroup" type="hidden" />
    <input name="counterPartyStatus" value="@Model.counterPartyStatus" type="hidden" />
    <input name="cifCounterParty" value="@Model.cifCounterParty" type="hidden" />
    <input name="isInau" value="@Model.isInau" type="hidden" />
    if (Model.counterPartyGroup == "CONTRACTED")
    {

        <div class="row form-group">
            <div class="col-md-2 left-label">
                <label class="pull-right">
                    Mã Cif
                </label>
            </div>
            <div class="col-md-4">
                <input type="text" id="cifCounterParty" name="cifCounterParty" class="form-control" value="@Model.cifCounterParty" disabled />
            </div>
            <div class="col-md-2 left-label">
                <label class="pull-right">
                    Tên đối tác
                </label>
            </div>
            <div class="col-md-4">
                <div class="input-group date" data-provide="datepicker">
                    <input type="text" id="counterPartyName" name="counterPartyName" class="form-control" value="@Model.counterPartyName" disabled />
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2 left-label">
                <label class="pull-right">
                    Tên viết tắt
                </label>
            </div>
            <div class="col-md-4">
                <input type="text" id="shortName" name="shortName" class="form-control text-uppercase" value="@Model.shortName" disabled />
            </div>
            <div class="col-md-2 left-label">
                <label class="pull-right">
                    Ngày ký hợp đồng
                </label>
            </div>
            <div class="col-md-4">
                <div class="input-group date" data-provide="datepicker">
                    <input class="datepicker form-control" id="signedContractDate" name="signedContractDate" type="text" value="@Model.signedContractDate.ToShortDateString()" disabled />
                    <div class="input-group-addon">
                        <span class="fa fa-calendar"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2 left-label">
                <label class="pull-right">
                    Tài khoản chuyên thu
                </label>
            </div>
            <div class="col-md-10">
                <input type="text" id="paymentAccount" name="paymentAccount" class="form-control text-uppercase" value="@Model.paymentAccount" disabled />
            </div>
        </div>

    }
    if (Model.counterPartyGroup == "UNCONTRACT")
    {
        <div class="row form-group">
            <div class="col-md-2 left-label">
                <label class="pull-right">
                    Tên đối tác
                </label>
            </div>
            <div class="col-md-10">
                <div class="input-group date" data-provide="datepicker">
                    <input type="text" id="counterPartyName" name="counterPartyName" class="form-control" value="@Model.counterPartyName" disabled />
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2 left-label">
                <label class="pull-right">
                    Tên viết tắt
                </label>
            </div>
            <div class="col-md-4">
                <input type="text" id="shortName" name="shortName" class="form-control text-uppercase" value="@Model.shortName" disabled />
            </div>
            <div class="col-md-2 left-label">
                <label class="pull-right">
                    Tài khoản chuyên thu
                </label>
            </div>
            <div class="col-md-4">
                <input type="text" id="paymentAccount" name="paymentAccount" class="form-control text-uppercase" value="@Model.paymentAccount" disabled />
            </div>
        </div>
    }
}
