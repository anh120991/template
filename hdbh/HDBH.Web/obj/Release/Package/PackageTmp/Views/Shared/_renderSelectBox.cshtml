@model List<SelectListItem>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <option value="@item.Value" @(item.Selected ? "selected" : "") @(item.Disabled ? "disabled" : "") group="@Newtonsoft.Json.JsonConvert.SerializeObject(item.Group)">@item.Text</option>
    }
}
